<%= render 'layouts/navbar' %>

<div class="colorful">
     <h2>Files Uploaded</h2>
    <% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<table class = "table table-bordered table-striped">
   <thead>
      <tr>
         <th>Title</th>
         <th>Description</th>
         <th> </th>
         <th> </th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @documents.each do |document| %>
         
         <tr>
            <td><%= document.title %></td>
            <td><%= document.description %></td>
            
             <td><%= link_to 'Show', document %></td>
             <td><%= link_to 'Edit', edit_document_path(document) %></td>
             <td><%= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
             </tr>
         
      <% end %>
   </tbody>
   
</table>
<%= link_to "New Document", new_document_path, class:  "btn btn-lg btn-primary btn-block" %>
</div>